<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mt-5">Inicio de Sesión</h2>
            {{#if messages.success}}
            <div class="alert alert-success mt-2 text-center" role="alert" id="success-message">
                {{messages.success}}
                </div>
            {{/if}}
            {{#if messages.error}}
                <div class="alert alert-danger mt-2 text-center" role="alert" id="error-message">
                    {{messages.error}}
                </div>
            {{/if}}
            <form action="/api/sessions/login" method="POST" class="card card-body bg-secondary mt-4 needs-validation" novalidate>
                <div class="mb-3">
                    <input type="email" class="form-control" id="email" name="email" placeholder="E-mail" required>
                    <div class="invalid-feedback">
                        Por favor ingresa una dirección de correo electrónico válida.
                    </div>
                </div>
                <div class="mb-3">
                    <input type="password" class="form-control" id="password" name="password" placeholder="Contraseña" required>
                    <div class="invalid-feedback">
                        Por favor ingresa tu contraseña.
                    </div>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
                </div>
            </form>
            <div class="text-center mt-3">
                <a href="/register" class="text-light">¿No tienes una cuenta? Regístrate</a>
            </div>
        </div>
    </div>
</div>
<script src="/js/hideError.js"></script>
<script src="/js/validate.js"></script>
